<?xml version="1.0" encoding="UTF-8"?>
<!-- profiles.xml -->
<profiles>
    <profile name="profile1">
        <format>mp4</format>
        <vcodec>libx264</vcodec>
        <acodec>libfdk_aac</acodec>
        <additionalFlags>-profile:v baseline</additionalFlags>
        <levels>
            <level name="level1"/>
        </levels>
    </profile>
    <profile name="profile2">
        <format>webm</format>
        <vcodec>libvpx</vcodec>
        <acodec>libvorbis</acodec>
        <additionalFlags></additionalFlags>
        <levels>
            <level name="level1"/>
        </levels>
    </profile>
    <profile name="profile3" class="HLS">
        <format>m3u8</format>
        <vcodec>libx264</vcodec>
        <acodec>libfdk_aac</acodec>
        <additionalFlags>-profile:v baseline -map 0 -flags -global_header</additionalFlags>
        <segDuration>3</segDuration>
        <windowLength>3</windowLength>
        <levels>
            <level name="level2"/>
            <level name="level3"/>h
            <level name="level4"/>
        </levels>
    </profile>
    <profile name="profile4" class="DASH">
    	<format>mpd</format>
        <vcodec>libx264</vcodec>
        <acodec>libfdk_aac</acodec>
        <additionalFlags></additionalFlags>
        <segDuration>500</segDuration>    <!-- Duration in ms -->
        <fragDuration>100</fragDuration>	<!-- Duration in ms -->  
        <levels>
            <level name="level2"/>
            <level name="level3"/>
            <level name="level4"/>
        </levels>
    </profile>
</profiles>